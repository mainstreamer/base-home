{{ form_start(form, {'attr' : {'class' : 'form-horizontal col-xl-4 col-lg-6 col-md-8 col-sm-8 col-xs-12'}}) }}
<div class="card-body">
    <h5 class="form-group row">{{ title }}</h5>
    <div class="form-group row">
        <div class="input-group col-12" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'name'|trans }}">
            {{ form_widget(form.name, {'attr' : {'class' : 'form-control', 'placeholder' : 'name'|trans|capitalize}}) }}
        </div>
    </div>

    <div class="form-group row">
        <div class="input-group col-12" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'description'|trans }}">
            {{ form_widget(form.description, {'attr' : {'class' : 'form-control', 'placeholder' : 'description'|trans|capitalize}}) }}
        </div>
    </div>


    <div class="form-group row">
        <div class="input-group col-12" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'type'|trans }}">
            {{ form_widget(form.type, {'attr' : {'class' : 'form-control', 'placeholder' : 'subscription_type'|trans|capitalize}}) }}
        </div>
    </div>


    <div class="form-group row">
        <div class="input-group col-12" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'price'|trans }}">
            {{ form_widget(form.price, {'attr' : {'class' : 'form-control', 'placeholder' : 'price'|trans|capitalize}}) }}
        </div>
    </div>

    <div class="form-group row">
        <div class="input-group col-12" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'currency'|trans }}">
            {{ form_widget(form.currency, {'attr' : {'class' : 'form-control', 'placeholder' : 'currency'|trans|capitalize}}) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="input-group col-12" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'period'|trans }}">
            {{ form_widget(form.period, {'attr' : {'class' : 'form-control', 'placeholder' : 'period'|trans|capitalize}}) }}
        </div>
    </div>

    <div class="form-group row">
        <div class="input-group col-12" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'autorenew'|trans }}">
            {{ form_widget(form.autoRenew, {'attr' : {'class' : 'form-control', 'placeholder' : 'autorenew'|trans|capitalize}}) }}
        </div>
    </div>

    <div class="form-group row" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'start_date.title' | trans }}">
        <div class="input-group col-12">
            {{ form_widget(form.startDate, {'attr' : { 'autocomplete' : 'off', 'class' : 'form-control datepicker-autoclose', 'placeholder' : 'start_date.title'|trans }}) }}
            <div class="input-group-append">
                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
            </div>
        </div>
    </div>

    <div class="form-group row" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'end_date.title' | trans }}">
        <div class="input-group col-12">
            {{ form_widget(form.endDate, {'attr' : {  'autocomplete' : 'off', 'class' : 'form-control datepicker-autoclose', 'placeholder' : 'end_date.title'|trans }}) }}
            <div class="input-group-append">
                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
            </div>
        </div>
    </div>
    <div class="form-group row" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'next_billing_date.title' | trans }}">
        <div class="input-group col-12">
            {{ form_widget(form.nextBillingDate, {'attr' : {  'autocomplete' : 'off', 'class' : 'form-control datepicker-autoclose', 'placeholder' : 'next_billing_date.title'|trans }}) }}
            <div class="input-group-append">
                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
            </div>
        </div>
    </div>
</div>
<div class="border-top">
    <div class="card-body">
        <button class="btn btn-outline-primary">{{ button_label|default('save'|trans|capitalize) }}</button>
    </div>

</div>
<div style="display: none">{{ form_rest(form) }}</div>
{{ form_end(form) }}
