{% extends 'base.html.twig' %}

{% block title %}Edit Place{% endblock %}

{% block content %}
    <div class="page-breadcrumb">
        <div class="row">
            <div  class="col-1">
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <a href="{{ path('my_places') }}">
                                <li class="breadcrumb-item">
                                    <i class="ti ti-angle-left" style="padding-right: 0.5rem;"></i> {{ 'back'|trans }}
                                </li>
                            </a>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="col-11 d-flex no-block align-items-center">
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item" aria-current="page"><a href="{{ path('my_places') }}">Місця</a></li>
                            {#<li class="breadcrumb-item active">{{ indication.id }}</li>#}
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-9">
            {% include('place/_form.html.twig') with {'title' : 'place.edit.title' |trans, 'place' : place, 'url' : path('place_delete', { 'id' : place.id })} %}
        </div>
        <div class="col-3 d-flex align-items-end justify-content-end">
                {% include('common/_delete_button.html.twig') with {'url' : path('place_delete', { 'id' : place.id }), 'id' : place.id} %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    });
    </script>
{% endblock javascripts %}
