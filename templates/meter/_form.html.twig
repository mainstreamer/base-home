{{ form_start(form, {'attr' : {'class' : 'form-horizontal col-xl-4 col-lg-6 col-md-8 col-sm-8 col-xs-12'}}) }}

<div class="card-body">
    <h5 class="form-group row">
        {{ title }}</h5>
    <div class="form-group row">
        <div class="input-group col-12" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'name' | trans }}">
            {{ form_widget(form.name, {'attr' : {'class' : 'form-control', 'placeholder' : 'name' | trans}}) }}
        </div>
    </div>
    <div class="form-group row" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'service.type' | trans }}">
        <div class="input-group col-12">
            {{ form_widget(form.type, {'attr' : {'placeholder' : 'Тип послуг', 'class' : 'w-100 p-3 select2 form-control select2 select2-container form-control' }}) }}
        </div>
    </div>
    <div class="form-group row" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'measure.unit' | trans }}">
        <div class="input-group col-12">
            {{ form_widget(form.unit, {'attr' : {'placeholder' : 'measure.unit' | trans , 'class' : 'w-100 p-3 select2 form-control select2 select2-container form-control' }}) }}
        </div>
    </div>
    <div class="form-group row" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'meter.tariffs' | trans }}">
        <div class="input-group col-12">
            {{ form_widget(form.tariffs, {'attr' : {'class' : 'form-control select2 select2-container', 'placeholder' : 'meter.tariffs' | trans}}) }}
        </div>
    </div>
</div>
<div class="border-top">
    <div class="card-body">
        <button class="btn btn-outline-primary">{{ button_label|default('Зберегти') }}</button>
    </div>
</div>

{{ form_end(form) }}
