{{ form_start(form, {'attr' : {'class' : 'form-horizontal col-xl-4 col-lg-6 col-md-8 col-sm-8 col-xs-12'}}) }}

<div class="card-body">
    <h5 class="form-group row">
        {{ title }}</h5>
    <div class="form-group row" data-toggle="tooltip" data-placement="right" data-original-title="{{ "tariff.price" | trans }}">
        <div class="input-group col-12">
            {{ form_widget(form.price, {'attr' : {'class' : 'form-control', 'placeholder' : 'tariff.price'|trans}}) }}
        </div>
    </div>
    <div class="form-group row" data-toggle="tooltip" data-placement="right" data-original-title="{{ "tariff.name" | trans }}">
        <div class="input-group col-12">
            {{ form_widget(form.name, {'attr' : {'placeholder' : 'tariff.name'|trans, 'class' : 'form-control' }}) }}
        </div>
    </div>
    <div class="form-group row" data-toggle="tooltip" data-placement="right" data-original-title="{{ "tariff.description" | trans }} {{ "not_required"|trans }}">
        <div class="input-group col-12">
            {{ form_widget(form.description, {'attr' : {'placeholder' : 'tariff.description'|trans~' '~'not_required'|trans, 'class' : 'p-2 form-control ' }}) }}
        </div>
    </div>
    <div class="form-group row" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'tariff_type' | trans }}">
        <div class="input-group col-12">
            {{ form_widget(form.type, {'attr' : {'class' : 'form-control select2 form-control select2 select2-container form-control', 'placeholder' : 'tariff_type' | trans}}) }}
        </div>
    </div>
</div>
<div class="border-top">
    <div class="card-body">
        <button class="btn btn-outline-primary">{{ button_label|default('Зберегти') }}</button>
    </div>
</div>

{{ form_end(form) }}
