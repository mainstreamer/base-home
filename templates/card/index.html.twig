{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="card-body d-flex justify-content-between border-bottom">
                <div><h5>{{ 'pages.cards' |trans|capitalize }}</h5></div>
                <a href="{{ path('card_new') }}" class="btn btn-outline-success ">
                    {{ 'button.add'|trans }}
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>
                <ul class="list-style-none">
                    {% for card in app.user.cards %}
                    <li class="d-flex no-block card-body border-bottom">
                        <a href="{{ path('card_edit', {'id' : card.id}) }}" class="m-b-0 font-medium p-0">
                        <div class="col-md-6 col-lg-2 col-xlg-3">
                            <div class="row card card-hover">
                                <div class="box bg-info text-left">
                                    <h1 class="font-light text-white">
                                        {% if card.firstDigits|first == '4' %}
                                            <i class="fab fa-cc-visa"></i>
                                        {% else %}
                                            <i class="fab fa-cc-mastercard"  aria-hidden="true"></i>
                                        {% endif %}
                                    </h1>
                                    <h6 class="text-white" style="min-width: 150px;">{{ card.bank }}</h6>
                                    <h6 class="text-white">{{card.firstDigits}}●● ●●●● ●●●● {{card.digits}}</h6>
                                </div>
                            </div>
                        </div>
                        </a>
                        <div class="m-l-20">
                            <a href="{{ path('card_edit', {'id' : card.id}) }}" class="m-b-0 font-medium p-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</a>
                            <span class="text-muted">dolor sit amet, consectetur adipiscing</span>
                        </div>
                    </li>
                    {% endfor %}
                </ul>

            </div>
        </div>
    </div>

{% endblock %}

