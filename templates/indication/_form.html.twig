{{ form_start(form, {'attr' : {'class' : 'form-horizontal col-xl-4 col-lg-6 col-md-8 col-sm-8 col-xs-12'}}) }}

<div class="card-body">
    <h5 class="text-left">{{ title }}</h5>
    <div class="form-group row" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'indication.file.date' | trans }}">
        <div class="input-group col-12">
            {{ form_widget(form.date, {'attr' : { 'readonly' : 'readonly', 'autocomplete' : 'off', 'class' : 'form-control datepicker-autoclose', 'placeholder' : 'indication.file.date' | trans  }}) }}
            <div class="input-group-append">
                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
            </div>
        </div>
    </div>
    <div id="tooltip-file" class="form-group row" data-toggle="tooltip" data-placement="right" title="" data-original-title="{{ 'indication.file.tooltip' | trans }}">
        <div class="input-group col-12">
            <div class="custom-file">
                {{ form_widget(form.file, {'attr' : {'class' : 'custom-file-input form-control', 'placeholder' : ''}}) }}
                <div class="invalid-feedback">Example invalid custom file feedback</div>

                <label class="custom-file-label" for="validatedCustomFile">
                    {{ 'choose_file'|trans }}
                </label>
                <div class="input-group-append" style="z-index: 2; height: 100%">
                    <span  class="input-group-text file-icon"><i id="file-icon" class=" mdi mdi-upload"></i></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row" data-toggle="tooltip" data-placement="right" data-original-title="{{ 'indication.file.value' | trans }}">
        <div class="input-group col-12">
            {{ form_widget(form.value, {'attr' : {'class' : 'form-control', 'placeholder' : 'indication.title' | trans}}) }}
        </div>
    </div>
</div>
<div class="border-top">
    <div class="card-body">
        <button class="btn btn-outline-primary">{{ button_label|default('save'|trans) }}</button>
    </div>
</div>

{{ form_end(form) }}
